{
  "name": "icetea",
  "version": "0.1.0",
  "description": "Tendermint-based icetea",
  "main": "server.js",
  "scripts": {
    "test": "standard",
    "fix": "standard --fix",
    "lint": "standard",
    "jest": "jest --test-environment ./test/icetea.env.js",
    "start": "standard --fix && node icetea/index.js",
    "app": "standard --fix && webpack-dev-server --open --config webpack.dev.js",
    "web": "standard --fix && webpack-dev-server --config webpack.dev.js",
    "reset": "tendermint unsafe_reset_all && node ./scripts/destroy.js",
    "dump": "node ./scripts/dump.js",
    "show": "sudo lsof -i tcp:26657",
    "deploybot": "node scripts/deploybot",
    "docs:build": "node_modules/.bin/jsdoc --configure jsdoc.json --verbose",
    "blockchain": "tendermint node & node icetea/index.js",
    "build": "webpack --config webpack.prod.js",
    "build:server": "node --max_old_space_size=1096 node_modules/webpack/bin/webpack.js --config webpack.prod.js"
  },
  "keywords": [
    "icetea",
    "blockchain",
    "tendermint"
  ],
  "author": "Trada Tech",
  "license": "MIT",
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/tmp/",
      "**/example/",
      "/web/botui.js"
    ],
    "global": [
      "BigInt"
    ],
    "env": [
      "jest"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/icetea/**/*",
      "!<rootDir>/node_modules/"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  },
  "pre-commit": [
    "test"
  ],
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-private-methods": "7.4.4",
    "@babel/plugin-transform-flow-strip-types": "7.4.4",
    "@hapi/joi": "15.0.0",
    "@webassemblyjs/ast": "1.8.5",
    "@webassemblyjs/wasm-parser": "1.8.5",
    "abci": "5.0.1",
    "ansi_up": "4.0.3",
    "async": "2.6.2",
    "bip39": "3.0.1",
    "bn.js": "4.11.8",
    "body-parser": "1.19.0",
    "botui": "0.3.8",
    "chalk": "2.4.2",
    "cheerio": "1.0.0-rc.3",
    "dotenv": "7.0.0",
    "express": "4.16.4",
    "handlebars": "4.1.2",
    "hdkey": "1.1.1",
    "icetea-botutils": "github:TradaTech/botutils",
    "icetea-common": "github:TradaTech/icetea-common",
    "icetea-web3": "github:TradaTech/icetea-web3",
    "jquery": ">=3.4.0",
    "json-formatter-js": "2.2.1",
    "level": "5.0.1",
    "lodash": "4.17.11",
    "merkle-patricia-tree": "3.0.0",
    "moment": "2.24.0",
    "node-localstorage": "1.3.1",
    "prismjs": "1.16.0",
    "semver": "^6.0.0",
    "validator": "10.11.0",
    "vue": "2.6.10",
    "wasm-metering": "0.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "8.0.5",
    "copy-webpack-plugin": "5.0.3",
    "dotenv-webpack": "1.7.0",
    "get-port": "5.0.0",
    "globals": "11.12.0",
    "jest": "24.7.1",
    "jest-environment-node": "24.8.0",
    "jsdoc": "3.5.5",
    "jsdoc-template": "git+https://github.com/braintree/jsdoc-template.git",
    "jsx-ast-utils": "^2.1.0",
    "mime-db": "^1.40.0",
    "nodemon": "1.18.11",
    "npm": "^6.9.0",
    "npx": "10.2.0",
    "p-try": "^2.2.0",
    "pm2": "3.5.0",
    "pre-commit": "1.2.2",
    "react-is": "^16.8.6",
    "resolve": "^1.11.0",
    "standard": "12.0.1",
    "tempy": "0.3.0",
    "tendermint-node": "5.1.2",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1",
    "webpack-dev-server": "3.3.1",
    "webpack-merge": "4.2.1"
  }
}
