{
  "name": "@iceteachain/node",
  "version": "0.1.0",
  "description": "Icetea Blockchain",
  "scripts": {
    "fix": "standard --fix",
    "lint": "standard",
    "test": "jest --test-environment ./test/icetea.env.js",
    "bail": "jest --bail --test-environment ./test/icetea.env.js",
    "test:coverage": "npm run test -- --coverage",
    "start": "standard --fix && node icetea/index.js",
    "app": "standard --fix && webpack-dev-server --open --config webpack.dev.js",
    "web": "standard --fix && webpack-dev-server --config webpack.dev.js",
    "gate": "node gate/index.js",
    "reset": "tendermint unsafe_reset_all && node ./scripts/destroy.js",
    "dump": "node ./scripts/dump.js",
    "show": "sudo lsof -i tcp:26657",
    "deploybot": "node scripts/deploybot",
    "docs:build": "node_modules/.bin/jsdoc --configure jsdoc.json --verbose",
    "blockchain": "tendermint node & node icetea/index.js",
    "build": "webpack --config webpack.prod.js",
    "build:dev": "webpack --config webpack.dev.js",
    "build:server": "node --max_old_space_size=1096 node_modules/webpack/bin/webpack.js --config webpack.prod.js"
  },
  "keywords": [
    "icetea",
    "blockchain",
    "tendermint"
  ],
  "author": "Trada Tech",
  "license": "MIT",
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/tmp/",
      "**/example/",
      "/web/botui.js"
    ],
    "global": [
      "BigInt"
    ],
    "env": [
      "jest"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/icetea/**/*",
      "!<rootDir>/node_modules/"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@babel/core": "7.6.0",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.4.4",
    "@babel/plugin-proposal-optional-chaining": "7.6.0",
    "@babel/plugin-proposal-private-methods": "7.6.0",
    "@babel/plugin-transform-flow-strip-types": "7.4.4",
    "@babel/preset-env": "7.6.0",
    "@hapi/joi": "16.1.2",
    "@iceteachain/sunseed": "github:TradaTech/sunseed",
    "@iceteachain/utils": "github:TradaTech/icetea-utils",
    "@iceteachain/web3": "^0.1.14",
    "@webassemblyjs/ast": "1.8.5",
    "@webassemblyjs/wasm-parser": "1.8.5",
    "abci": "5.0.1",
    "ansi_up": "4.0.4",
    "async": "3.1.0",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "big.js": "5.2.2",
    "botui": "^0.3.9",
    "chalk": "2.4.2",
    "cheerio": "1.0.0-rc.3",
    "commander": "3.0.1",
    "copy-webpack-plugin": "5.0.4",
    "debug": "4.1.1",
    "dotenv": "8.1.0",
    "dotenv-webpack": "1.7.0",
    "eciesjs": "^0.3.1",
    "graceful-fs": "4.2.2",
    "handlebars": "^4.5.3",
    "jquery": ">=3.4.0",
    "json-formatter-js": "2.2.1",
    "level": "5.0.1",
    "lodash": "4.17.15",
    "merkle-patricia-tree": "3.0.0",
    "node-localstorage": "1.3.1",
    "nodemon": "^1.19.1",
    "object-sizeof": "1.5.1",
    "prismjs": "1.17.1",
    "rimraf": "3.0.0",
    "semver": "6.3.0",
    "tendermint-node": "github:TradaTech/tendermint-node",
    "validator": "11.1.0",
    "vue": "2.6.10",
    "wasm-metering": "0.2.1",
    "webpack": "4.40.2",
    "webpack-cli": "3.3.9",
    "webpack-dev-server": "3.8.1",
    "webpack-merge": "4.2.2"
  },
  "devDependencies": {
    "get-port": "5.0.0",
    "jest": "24.9.0",
    "jest-environment-node": "24.9.0",
    "jsdoc": "3.6.3",
    "jsdoc-template": "git+https://github.com/braintree/jsdoc-template.git",
    "pm2": "3.5.1",
    "pre-commit": "1.2.2",
    "standard": "14.3.0",
    "tempy": "0.3.0"
  },
  "bin": {
    "icetea": "cli/index.js"
  },
  "preferGlobal": true
}
